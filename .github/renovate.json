{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "go"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "Go dependencies",
      "labels": [
        "type/dependencies",
        "area/services"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "Docker dependencies",
      "labels": [
        "type/dependencies",
        "area/docker"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "GitHub Actions",
      "labels": [
        "type/dependencies",
        "area/github"
      ]
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "automerge": false,
  "prConcurrentLimit": 5,
  "prHourlyLimit": 0,
  "schedule": [
    "before 6am on monday"
  ],
  "timezone": "UTC"
}
