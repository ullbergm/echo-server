{
    "categories": [
        {
            "title": "## üöÄ Features",
            "labels": ["enhancement", "feature"],
            "rules": [
                {
                    "pattern": "^feat.*",
                    "on_property": "title",
                    "flags": "i"
                }
            ]
        },
        {
            "title": "## üêõ Bug Fixes",
            "labels": ["bug", "fix"],
            "rules": [
                {
                    "pattern": "^fix.*",
                    "on_property": "title",
                    "flags": "i"
                }
            ]
        },
        {
            "title": "## üìö Documentation",
            "labels": ["documentation"],
            "rules": [
                {
                    "pattern": "^docs.*",
                    "on_property": "title",
                    "flags": "i"
                }
            ]
        },
        {
            "title": "## üß∞ Maintenance",
            "labels": ["chore", "dependencies"],
            "rules": [
                {
                    "pattern": "^(chore|build|ci|refactor).*",
                    "on_property": "title",
                    "flags": "i"
                }
            ]
        },
        {
            "title": "## üì¶ Dependencies",
            "labels": ["dependencies"],
            "rules": [
                {
                    "pattern": "^(chore\\(deps\\)|deps).*",
                    "on_property": "title",
                    "flags": "i"
                }
            ]
        },
        {
            "title": "## üîÑ Other Changes",
            "exhaustive": true,
            "exhaustive_rules": "false"
        }
    ],
    "label_extractor": [
        {
            "method": "regexr",
            "pattern": "(.+?)!?:.+",
            "target": "$1",
            "on_property": "title"
        }
    ],
    "sort": {
        "order": "ASC",
        "on_property": "mergedAt"
    },
    "template": "#{{CHANGELOG}}",
    "pr_template": "- #{{TITLE}} by @#{{AUTHOR}} in https://github.com/#{{REPO}}/#{{NUMBER}}",
    "empty_template": "- No changes",
    "includeOpen": false,
    "trim_values": false,
    "max_tags_to_fetch": 200,
    "max_pull_requests": 200,
    "max_back_track_time_days": 365,
    "tag_resolver": {
        "method": "semver"
    }
}
