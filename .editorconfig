# EditorConfig helps maintain consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# Go files - tabs as per Go convention
[*.go]
indent_style = tab
indent_size = 4

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# HTML templates
[*.html]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Dockerfile
[Dockerfile]
indent_style = space
indent_size = 4

# Taskfile
[Taskfile.yml]
indent_style = space
indent_size = 2

# TOML files (e.g., .air.toml)
[*.toml]
indent_style = space
indent_size = 2

# Makefile requires tabs
[Makefile]
indent_style = tab

# Git config files
[.git*]
indent_style = space
indent_size = 2
